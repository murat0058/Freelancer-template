@{
    ViewBag.Title = "AboutListing";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            About - Listing
            <span style="text-align:right"><a href="#" onclick="document.getElementById('job').setAttribute('value', 'add'); document.getElementById('operationForm').submit(); return false;"><i class="fa fa-plus"></i></a></span>

            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "operationForm" }))
            {
                @Html.Hidden("job");
                @Html.Hidden("id");
            }
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Cols</th>
                        <th>Content</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (dynamic obj in ViewBag.Fields)
                    {
                        <tr style='cursor:pointer'>
                            <td onclick='window.location.href = "/admin/aboutedit?id=@obj.id"'>@obj.id</td>
                            <td onclick='window.location.href = "/admin/aboutedit?id=@obj.id"'>@obj.cols</td>
                            <td onclick='window.location.href = "/admin/aboutedit?id=@obj.id"'>@Html.Raw(obj.content)</td>
                            <td>
                                <a href="#" onclick="if (confirm('Are you sure you want to delete this item?')) { document.getElementById('job').setAttribute('value', 'del'); document.getElementById('id').setAttribute('value', '@obj.id' ); document.getElementById('operationForm').submit(); return false; }">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
